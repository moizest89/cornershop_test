<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_small"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/margin_padding_size_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCounterName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginEnd="@dimen/margin_padding_size_mini_small"
                android:layout_weight="1"
                android:text="@string/counter_name_hint"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body1" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButtonDecrement"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="@dimen/buttons_normal_size"
                android:layout_height="@dimen/buttons_normal_size"
                android:layout_gravity="start|center"
                android:backgroundTint="@color/white"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:stateListAnimator="@null"
                android:text=""
                app:icon="@drawable/ic_remove_orange"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="@color/orange"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Button.Circle" />

            <TextView
                android:id="@+id/textViewCounter"
                android:layout_width="@dimen/buttons_normal_size"
                android:layout_height="@dimen/buttons_normal_size"
                android:layout_marginStart="@dimen/margin_padding_size_mini_small"
                android:layout_marginEnd="@dimen/margin_padding_size_mini_small"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButtonIncrement"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="@dimen/buttons_normal_size"
                android:layout_height="@dimen/buttons_normal_size"
                android:layout_gravity="start|center"
                android:backgroundTint="@color/white"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:stateListAnimator="@null"
                android:text=""
                app:icon="@drawable/ic_add_orange"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="@color/orange"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Button.Circle" />

            <ImageView
                android:id="@+id/imageViewCheck"
                android:layout_width="@dimen/buttons_normal_size"
                android:layout_height="@dimen/buttons_normal_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:alpha="0.1"
        android:background="@color/gray" />
</FrameLayout>